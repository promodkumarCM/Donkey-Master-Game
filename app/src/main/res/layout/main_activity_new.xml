<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.sparklingapps.cardgamefrog.utils.CardGameTextView
        android:id="@+id/tv_game_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:text="Donkey Game"
        android:textSize="20sp"
        app:textfontName="TheBomb" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/tv_game_title"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/aces" />

    <TextView
        android:id="@+id/tv_dummy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dummy"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_create_event"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left"
            android:clickable="true"
            android:elevation="5dp"
            android:foreground="?attr/selectableItemBackground"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardBackgroundColor="@color/colorQuickWizardButton"
            app:cardCornerRadius="25dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="40dp">

                <ImageView
                    android:id="@+id/img_create_event_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/play_triangle" />

                <com.sparklingapps.cardgamefrog.utils.CardGameTextView
                    android:id="@+id/lbl_createEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_create_event_icon"
                    android:text="Create Room"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:textfontName="TheBomb" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_join_event"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left"
            android:clickable="true"
            android:elevation="5dp"
            android:foreground="?attr/selectableItemBackground"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardBackgroundColor="@color/colorQuickWizardButton"
            app:cardCornerRadius="25dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="40dp">

                <ImageView
                    android:id="@+id/img_join_event_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/play_triangle" />

                <com.sparklingapps.cardgamefrog.utils.CardGameTextView
                    android:id="@+id/lbl_joinEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_join_event_icon"
                    android:text="Join Game"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:textfontName="TheBomb" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>