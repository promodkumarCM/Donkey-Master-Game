<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLightSelect</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MBillProgressTheme" parent="@android:style/Widget.ProgressBar">
        <item name="android:visibility">gone</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:indeterminateDrawable">@drawable/drawable_progress</item>
    </style>

    <style name="NoTopBarAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputEditTextStyle" parent="@android:style/TextAppearance">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:layout_margin">16dp</item>
    </style>


    <style name="CardTheme">
        <item name="android:width">150dp</item>
        <item name="android:height">250dp</item>
    </style>

</resources>
